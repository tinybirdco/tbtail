[Unit]
Description=Tinybird log tailer tbtail by Tinybird
After=network.target

[Service]
ExecStart=/usr/local/bin/tbtail -c /etc/tbtail/tbtail.conf
StandardOutput=file:/var/log/tbtail.log
StandardError=file:/var/log/tbtail.log
KillMode=process
Restart=always
RestartSec=5s
TimeoutStartSec=10s
TimeoutStopSec=10s
User=deploy
Group=deploy
PermissionsStartOnly=true

[Install]
Alias=tbtail tbtail.service
WantedBy=multi-user.target