# Upstart job for tbtail, the log tailer for Tinybird
# https://tinybird.co

description     "Tbtail Daemon"
author          "Tinybird.co"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

script
  exec >/var/log/tbtail.log 2>&1
exec su -s /bin/sh -c 'exec "$0" "$@"' root -- /usr/local/bin/tbtail -c /etc/tbtail/tbtail.conf
end script
