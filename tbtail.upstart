# Upstart job for tbtail, the log tailer for Tinybird
# https://tinybird.co

description     "Tbtail Daemon"
author          "Tinybird.co"

start on runlevel [2345]
stop on runlevel [!2345]

respawn

exec su -s /bin/sh -c 'exec "$0" "$@"' root -- /home/deploy/logs-tbtail -c /home/deploy/logs-tbtail/tbtail.conf
